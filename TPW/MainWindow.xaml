<Window x:Class="TPW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="200" MinHeight="120" MinWidth="200">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <Label HorizontalAlignment="Center">Dodaj liczby do siebie:</Label>
            <TextBox
                Name="a"
                AcceptsReturn="True">
                0
            </TextBox>
            <TextBox
                Name="b"
                AcceptsReturn="True">
                0
            </TextBox>
            <StackPanel  HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Padding="2" Margin="2" Click="Add_Click">Dodaj</Button>
                <Button Padding="2" Margin="2" Click="Subtract_Click">Odejmij</Button>
                <Button Padding="2" Margin="2" Click="Divide_Click">Podziel</Button>
                <Button Padding="2" Margin="2" Click="Multiply_Click">Pomnóż</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>